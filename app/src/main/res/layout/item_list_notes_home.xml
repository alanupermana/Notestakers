<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvItemListNotes"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    android:layout_marginBottom="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/ivItemListNotesHome"
            android:layout_width="71dp"
            android:layout_height="98dp"
            tools:src="@drawable/img_notes"
            android:scaleType="centerCrop"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tvItemListNotesTitleHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            tools:text="The title of Notes"
            android:textSize="14dp"
            android:layout_toEndOf="@id/ivItemListNotesHome"
            android:textColor="@color/black"/>

        <LinearLayout
            android:id="@+id/llItemListCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/ivItemListNotesHome"
            android:layout_below="@id/tvItemListNotesTitleHome"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tvCategoryNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/shape_radius_note"
                tools:text="Note"
                android:textSize="11sp"
                android:textColor="@color/blueText"
                android:layout_marginEnd="5dp"
                />
            <TextView
                android:id="@+id/tvCategoryMath"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/shape_radius_math"
                tools:text="Math"
                android:textSize="11sp"
                android:textColor="@color/pinkText"
                android:layout_marginEnd="5dp"
                />
            <TextView
                android:id="@+id/tvtvCategoryVerified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/shape_radius_verfied"
                tools:text="Verified"
                android:textSize="11sp"
                android:textColor="@color/geenText"
                android:layout_marginEnd="5dp"
                />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rlIdentitasNotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@id/ivItemListNotesHome"
            android:layout_below="@id/llItemListCategory"
            >
            <TextView
                android:id="@+id/tvHargaNotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="IDR 10.000,00"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                />
            <LinearLayout
                android:id="@+id/llOtherPerson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civPhotoOtherPerson"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/img_home_other_person"
                    />

                <TextView
                    android:id="@+id/tvOtherPerson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Other Person"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    />


            </LinearLayout>

        </RelativeLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>
